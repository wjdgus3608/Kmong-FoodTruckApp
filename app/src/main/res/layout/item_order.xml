<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@android:color/white"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:id="@+id/order_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/order_item_truck_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"/>
        <Button
            android:id="@+id/order_cancel_order_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문취소"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/order_top_container"
        app:layout_constraintBottom_toTopOf="@id/order_food_container">
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="음식 이름"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="5dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="가격"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="5dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="수량"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_vertical"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/order_food_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/order_label"
        app:layout_constraintBottom_toTopOf="@+id/order_item_total_price"
        android:orientation="vertical">

    </LinearLayout>
    <TextView
        android:id="@+id/order_item_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/order_food_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="end"/>
</androidx.constraintlayout.widget.ConstraintLayout>